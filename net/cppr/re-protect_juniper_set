set policy-options prefix-list ext_SNMP_community_list apply-path "snmp community <*> clients <*>"
set policy-options prefix-list ext_DNS_srv apply-path "system name-server <*>"
set policy-options prefix-list ext_NOC_hosts 10.1.0.1/32
set policy-options prefix-list ext_NOC_hosts 10.1.0.204/32
set policy-options prefix-list ext_NOC_hosts 10.1.0.205/32
